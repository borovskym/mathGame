<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg"
    tools:context="com.example.okay_pc.myapplication.GameScreen">

    <ProgressBar
        android:id="@+id/circularProgressbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progress="0"
        android:max="20000"
        android:secondaryProgress="20000"
        android:progressDrawable="@drawable/circular"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0"
            android:id="@+id/b_option3"
            android:textSize="25sp"
            android:textColor="#031634"
            android:background="@drawable/b_selector"
            android:enabled="false"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0"
            android:id="@+id/b_option1"
            android:textSize="25sp"
            android:textColor="#031634"
            android:background="@drawable/b_selector"
            android:enabled="false"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0"
            android:id="@+id/b_option2"
            android:textSize="25sp"
            android:textColor="#031634"
            android:background="@drawable/b_selector"
            android:enabled="false"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0"
            android:id="@+id/b_option4"
            android:textSize="25sp"
            android:textColor="#031634"
            android:background="@drawable/b_selector"
            android:enabled="false"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0"
            android:id="@+id/b_option5"
            android:textSize="25sp"
            android:textColor="#031634"
            android:background="@drawable/b_selector"
            android:enabled="false"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0"
            android:id="@+id/b_equation_element1"
            android:textSize="25sp"
            android:textColor="#031634"
            android:background="@drawable/b_num" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="3dp"
            android:text="@string/equation_plus"
            android:id="@+id/tv_equation_sign1"
            android:textSize="30sp"
            android:textColor="@color/text_c"
            android:gravity="center" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0"
            android:id="@+id/b_equation_element2"
            android:textSize="25sp"
            android:textColor="#031634"
            android:background="@drawable/b_num" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="3dp"
            android:text="@string/equation_plus"
            android:id="@+id/tv_equation_sign2"
            android:textSize="30sp"
            android:gravity="center"
            android:visibility="gone" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0"
            android:id="@+id/b_equation_element3"
            android:textSize="25sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="3dp"
            android:text="@string/equation_plus"
            android:id="@+id/tv_equation_sign3"
            android:textSize="30sp"
            android:gravity="center"
            android:visibility="gone" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="0"
            android:id="@+id/b_equation_element4"
            android:textSize="25sp"
            android:visibility="gone" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/tv_result"
            android:textSize="55sp"
            android:textColor="@color/text_c"
            android:layout_gravity="center_horizontal|top" />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/score_label"
            android:textColor="@color/text_c"
            android:id="@+id/tv_score_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:textColor="@color/text_c"
            android:id="@+id/tv_score_value" />
    </LinearLayout>

</RelativeLayout>
